<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.views.ServiceListFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_main"
                android:paddingBottom="20dp"
                tools:ignore="RtlSymmetry" />

            <!-- Vacations Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/vacations_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/vacations_logo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/component_logo"
                        android:src="@drawable/ic_vacation"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/vacations_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="@string/vacations"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/vacations_ref_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/component_logo"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="?attr/colorOnSurface" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Business Trips Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/business_trips_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/business_trips_logo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/component_logo"
                        android:src="@drawable/ic_business_trip"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/business_trips_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="@string/business_trips"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/business_trips_ref_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/component_logo"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="?attr/colorOnSurface" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sick Leaves Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sick_leaves_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/sick_leaves_logo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/component_logo"
                        android:src="@drawable/ic_sick"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/sick_leaves_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="@string/sick_leaves"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/sick_leaves_ref_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/component_logo"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="?attr/colorOnSurface" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Days Off Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/days_off_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/days_off_logo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/component_logo"
                        android:src="@drawable/ic_day_off"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/days_off_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="@string/days_off"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/days_off_ref_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/component_logo"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="?attr/colorOnSurface" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>

</layout>