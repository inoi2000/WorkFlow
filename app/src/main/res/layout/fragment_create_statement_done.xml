<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.views.CreateStatementDoneFragment">

    <data>
        <variable
            name="viewModel"
            type="com.petproject.workflow.presentation.viewmodels.CreateStatementDoneViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <!-- AppBar с прогресс-баром -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_main"
            android:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingHorizontal="16dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="22dp"
                app:title="Создание заявки"
                app:titleTextColor="?attr/colorOnPrimary" />

            <!-- Единый ConstraintLayout для всего прогресс-бара -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="12dp">

                <!-- Текст шага -->
                <TextView
                    android:id="@+id/stepTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Шаг 5 из 5: Готово"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Точка шага 1 -->
                <View
                    android:id="@+id/step1Indicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_progress_dot_active"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stepTextView" />

                <!-- Линия между шагами 1 и 2 -->
                <View
                    android:id="@+id/line1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_progress_line_active"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator"
                    app:layout_constraintEnd_toStartOf="@id/step2Indicator"
                    app:layout_constraintStart_toEndOf="@id/step1Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator" />

                <!-- Точка шага 2 -->
                <View
                    android:id="@+id/step2Indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_progress_dot_active"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator"
                    app:layout_constraintEnd_toStartOf="@id/line2"
                    app:layout_constraintStart_toEndOf="@id/line1"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator" />

                <!-- Линия между шагами 2 и 3 -->
                <View
                    android:id="@+id/line2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_progress_line_active"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator"
                    app:layout_constraintEnd_toStartOf="@id/step3Indicator"
                    app:layout_constraintStart_toEndOf="@id/step2Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator" />

                <!-- Точка шага 3 -->
                <View
                    android:id="@+id/step3Indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_progress_dot_active"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator"
                    app:layout_constraintEnd_toStartOf="@id/line3"
                    app:layout_constraintStart_toEndOf="@id/line2"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator" />

                <!-- Линия между шагами 3 и 4 -->
                <View
                    android:id="@+id/line3"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_progress_line_active"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator"
                    app:layout_constraintEnd_toStartOf="@id/step4Indicator"
                    app:layout_constraintStart_toEndOf="@id/step3Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator" />

                <!-- Точка шага 4 -->
                <View
                    android:id="@+id/step4Indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_progress_dot_active"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator"
                    app:layout_constraintEnd_toStartOf="@id/line4"
                    app:layout_constraintStart_toEndOf="@id/line3"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator" />

                <!-- Линия между шагами 4 и 5 -->
                <View
                    android:id="@+id/line4"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_progress_line_active"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator"
                    app:layout_constraintEnd_toStartOf="@id/step5Indicator"
                    app:layout_constraintStart_toEndOf="@id/step4Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator" />

                <!-- Точка шага 5 -->
                <View
                    android:id="@+id/step5Indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_progress_dot_active"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/line4"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator" />

                <!-- Название шага 1 -->
                <TextView
                    android:id="@+id/step1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Логист"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/step1Indicator"
                    app:layout_constraintTop_toBottomOf="@id/step1Indicator" />

                <!-- Название шага 2 -->
                <TextView
                    android:id="@+id/step2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Данные"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@id/step2Indicator"
                    app:layout_constraintStart_toStartOf="@id/step2Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Text" />

                <!-- Название шага 3 -->
                <TextView
                    android:id="@+id/step3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Машина"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@id/step3Indicator"
                    app:layout_constraintStart_toStartOf="@id/step3Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Text" />

                <!-- Название шага 4 -->
                <TextView
                    android:id="@+id/step4Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Водитель"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@id/step4Indicator"
                    app:layout_constraintStart_toStartOf="@id/step4Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Text" />

                <!-- Название шага 5 -->
                <TextView
                    android:id="@+id/step5Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Готово"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@id/step5Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Основной контент -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- Иконка успеха с анимацией -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="24dp">

                <!-- Фон круга -->
                <View
                    android:id="@+id/circleBackground"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_success_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Иконка галочки -->
                <ImageView
                    android:id="@+id/successIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_check_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Заголовок успеха -->
            <TextView
                android:id="@+id/successTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Заявка успешно создана!"
                android:textColor="?attr/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Сообщение -->
            <TextView
                android:id="@+id/successMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:lineSpacingExtra="4sp"
                android:text="Заявка отправлена на обработку и появится в списке рейсов"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="16sp" />

            <!-- Детали заявки -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Детали заявки"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Информация о заявке -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Логист:"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@{viewModel.logistName}"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Адрес доставки:"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@{viewModel.destinationAddress}"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Время доставки:"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@{viewModel.destinationTime}"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Контактный телефон:"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@{viewModel.contactPhone}"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Кнопки действий -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createAnotherStatementButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="Создать еще"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/goToJourneysButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="К рейсам"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_list"
                    app:iconGravity="textStart" />

            </LinearLayout>

            <!-- Прогресс загрузки -->
            <include
                android:id="@+id/loadingState"
                layout="@layout/state_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>