<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.views.InspectorTaskInfoFragment">

    <data>
        <variable
            name="viewmodel"
            type="com.petproject.workflow.presentation.viewmodels.InspectorTaskInfoViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Основной контент -->
            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Верхняя карточка с деталями и комментариями -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/details_comments_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="32dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/details_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:backgroundTint="?attr/colorPrimary"
                            android:text="@string/details"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/comments_card_view"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="?attr/colorSecondary"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/comments_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:gravity="center"
                                    android:text="@string/comments"
                                    android:textColor="?attr/colorPrimary"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/comments_counter_text_view"
                                    app:layout_constraintHorizontal_chainStyle="packed"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/comments_counter_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|end"
                                    android:layout_margin="6dp"
                                    android:background="@drawable/circle_grey"
                                    android:text="@{viewmodel.commentsCount}"
                                    android:textColor="?attr/colorPrimary"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/comments_text_view"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="0" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Основная карточка с информацией -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Описание -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="@string/description"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/task_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewmodel.inspectorTask.description}"
                            tools:text="№ SR0278294, Предоставление VPN доступа партнерам, доступ партнерам находящимся за рубежем" />

                        <View
                            style="@style/HorizontalLineView"
                            android:layout_marginTop="12dp" />

                        <!-- Исполнитель -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="@string/executor"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold" />

                        <include
                            android:id="@+id/task_executor"
                            layout="@layout/item_employee_info" />

                        <View style="@style/HorizontalLineView" />

                        <!-- Статус -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="@string/status"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/task_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewmodel.formattedStatus}"
                            tools:text="@string/new_task" />

                        <View
                            style="@style/HorizontalLineView"
                            android:layout_marginTop="12dp" />

                        <!-- Приоритет -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="@string/priority"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/task_priority"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewmodel.formattedPriority}"
                            tools:text="@string/urgent" />

                        <View
                            style="@style/HorizontalLineView"
                            android:layout_marginTop="12dp" />

                        <!-- Детали -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="@string/details"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold" />

                        <!-- Дата создания -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Создано:"
                                android:textColor="@color/grey_for_text" />

                            <TextView
                                android:id="@+id/task_creation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@{viewmodel.formattedCreatedAt}"
                                android:textColor="@color/grey_for_text"
                                android:gravity="end"
                                tools:text="20.08.2025 14:30" />
                        </LinearLayout>

                        <!-- Дедлайн -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="22dp"
                            android:layout_marginVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Дедлайн:"
                                android:textColor="@color/grey_for_text" />

                            <TextView
                                android:id="@+id/task_deadline"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@{viewmodel.formattedDeadline}"
                                android:gravity="end"
                                tools:text="28.08.2025" />
                        </LinearLayout>

                        <!-- Кнопки действий -->
                        <Button
                            android:id="@+id/approval_task_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="@string/approval_task" />

                        <Button
                            android:id="@+id/reject_task_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/reject_task"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <Button
                            android:id="@+id/cancel_task_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/cancel_task"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Состояние ошибки -->
            <LinearLayout
                android:id="@+id/error_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_error"
                    app:tint="@color/red"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/error_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Ошибка при загрузке задачи"
                    android:textColor="@color/grey_for_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Попробуйте обновить данные"
                    android:textColor="@color/grey_for_text"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/update_error_state_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Повторить" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>