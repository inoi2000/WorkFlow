<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.views.CreateStatementSelectionTransportFragment">

    <data>
        <variable
            name="viewmodel"
            type="com.petproject.workflow.presentation.viewmodels.CreateStatementViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- AppBar с прогресс-баром -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_main"
            android:elevation="4dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingHorizontal="16dp"
                app:contentInsetStart="22dp"
                app:titleTextColor="?attr/colorOnPrimary"
                app:contentInsetEnd="0dp"
                app:title="Создание заявки на выезд">

            </com.google.android.material.appbar.MaterialToolbar>

            <!-- Прогресс шагов (5 шагов) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Шаг 1 из 5"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:alpha="0.8"
                    android:layout_marginBottom="8dp" />

                <!-- Индикатор прогресса (5 шагов) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_progress_track"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/step1Indicator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_weight="1" />

                    <View
                        android:id="@+id/step2Indicator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white_transparent" />

                    <View
                        android:id="@+id/step3Indicator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white_transparent" />

                    <View
                        android:id="@+id/step4Indicator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/white_transparent"
                        android:layout_weight="1" />

                    <View
                        android:id="@+id/step5Indicator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/white_transparent"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Машина"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:gravity="start" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Прицеп"
                        android:textColor="@color/white_transparent"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Водитель"
                        android:textColor="@color/white_transparent"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Детали"
                        android:textColor="@color/white_transparent"
                        android:textSize="10sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Готово"
                        android:textColor="@color/white_transparent"
                        android:textSize="10sp"
                        android:gravity="end" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Основной контент -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Заголовок списка -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="14dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:text="Доступные машины"
                    android:paddingBottom="8dp" />

                <!-- Состояние загрузки -->
                <include
                    android:id="@+id/loadingState"
                    layout="@layout/state_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- Пустое состояние -->
                <include
                    android:id="@+id/emptyState"
                    layout="@layout/state_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- Ошибка -->
                <include
                    android:id="@+id/errorState"
                    layout="@layout/state_error"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- Список машин -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/carListRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="16dp"
                    android:clipToPadding="false"
                    android:paddingVertical="8dp"
                    android:scrollbars="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_car_info" />

            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Кнопка обновления при ошибке -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/retryButton"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="16dp"
            android:text="Повторить"
            android:visibility="gone"
            app:icon="@drawable/ic_refresh" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>