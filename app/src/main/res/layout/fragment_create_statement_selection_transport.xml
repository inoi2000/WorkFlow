<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.views.CreateStatementSelectionTransportFragment">

    <data>
        <variable
            name="viewmodel"
            type="com.petproject.workflow.presentation.viewmodels.CreateStatementViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- AppBar с компактным прогресс-баром -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_main"
            android:elevation="4dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="16dp"
                app:titleTextColor="@color/white"
                app:title="Создание заявки на выезд" />

            <!-- Единый ConstraintLayout для всего прогресс-бара -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="12dp">

                <!-- Текст шага -->
                <TextView
                    android:id="@+id/stepTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Шаг 1 из 5: Выбор машины"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Точка шага 1 -->
                <View
                    android:id="@+id/step1Indicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_progress_dot_active"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stepTextView"
                    android:layout_marginTop="8dp" />

                <!-- Линия между шагами 1 и 2 -->
                <View
                    android:id="@+id/line1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_progress_line_active"
                    app:layout_constraintStart_toEndOf="@id/step1Indicator"
                    app:layout_constraintEnd_toStartOf="@id/step2Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator" />

                <!-- Точка шага 2 -->
                <View
                    android:id="@+id/step2Indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_progress_dot_inactive"
                    app:layout_constraintStart_toEndOf="@id/line1"
                    app:layout_constraintEnd_toStartOf="@id/line2"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator" />

                <!-- Линия между шагами 2 и 3 -->
                <View
                    android:id="@+id/line2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_progress_line_inactive"
                    app:layout_constraintStart_toEndOf="@id/step2Indicator"
                    app:layout_constraintEnd_toStartOf="@id/step3Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator" />

                <!-- Точка шага 3 -->
                <View
                    android:id="@+id/step3Indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_progress_dot_inactive"
                    app:layout_constraintStart_toEndOf="@id/line2"
                    app:layout_constraintEnd_toStartOf="@id/line3"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator" />

                <!-- Линия между шагами 3 и 4 -->
                <View
                    android:id="@+id/line3"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_progress_line_inactive"
                    app:layout_constraintStart_toEndOf="@id/step3Indicator"
                    app:layout_constraintEnd_toStartOf="@id/step4Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator" />

                <!-- Точка шага 4 -->
                <View
                    android:id="@+id/step4Indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_progress_dot_inactive"
                    app:layout_constraintStart_toEndOf="@id/line3"
                    app:layout_constraintEnd_toStartOf="@id/line4"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator" />

                <!-- Линия между шагами 4 и 5 -->
                <View
                    android:id="@+id/line4"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_progress_line_inactive"
                    app:layout_constraintStart_toEndOf="@id/step4Indicator"
                    app:layout_constraintEnd_toStartOf="@id/step5Indicator"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator" />

                <!-- Точка шага 5 -->
                <View
                    android:id="@+id/step5Indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_progress_dot_inactive"
                    app:layout_constraintStart_toEndOf="@id/line4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/step1Indicator"
                    app:layout_constraintBottom_toBottomOf="@id/step1Indicator" />

                <!-- Название шага 1 -->
                <TextView
                    android:id="@+id/step1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Машина"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/step1Indicator"
                    app:layout_constraintStart_toStartOf="@id/step1Indicator"
                    android:layout_marginTop="6dp" />

                <!-- Название шага 2 -->
                <TextView
                    android:id="@+id/step2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Прицеп"
                    android:textColor="@color/white_transparent"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="@id/step1Text"
                    app:layout_constraintStart_toStartOf="@id/step2Indicator"
                    app:layout_constraintEnd_toEndOf="@id/step2Indicator" />

                <!-- Название шага 3 -->
                <TextView
                    android:id="@+id/step3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Водитель"
                    android:textColor="@color/white_transparent"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="@id/step1Text"
                    app:layout_constraintStart_toStartOf="@id/step3Indicator"
                    app:layout_constraintEnd_toEndOf="@id/step3Indicator" />

                <!-- Название шага 4 -->
                <TextView
                    android:id="@+id/step4Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Детали"
                    android:textColor="@color/white_transparent"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="@id/step1Text"
                    app:layout_constraintStart_toStartOf="@id/step4Indicator"
                    app:layout_constraintEnd_toEndOf="@id/step4Indicator" />

                <!-- Название шага 5 -->
                <TextView
                    android:id="@+id/step5Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Готово"
                    android:textColor="@color/white_transparent"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="@id/step1Text"
                    app:layout_constraintEnd_toEndOf="@id/step5Indicator" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Основной контент -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Заголовок списка -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="14dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:text="Доступные машины"
                    android:paddingBottom="8dp" />

                <!-- Состояние загрузки -->
                <include
                    android:id="@+id/loadingState"
                    layout="@layout/state_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- Пустое состояние -->
                <include
                    android:id="@+id/emptyState"
                    layout="@layout/state_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- Ошибка -->
                <include
                    android:id="@+id/errorState"
                    layout="@layout/state_error"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- Список машин -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/carListRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="16dp"
                    android:clipToPadding="false"
                    android:paddingVertical="8dp"
                    android:scrollbars="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_car_info" />

            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Кнопка обновления при ошибке -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/retryButton"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="16dp"
            android:text="Повторить"
            android:visibility="gone"
            app:icon="@drawable/ic_refresh" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>