<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.views.JourneyInfoFragment">

    <data>
        <variable
            name="viewmodel"
            type="com.petproject.workflow.presentation.viewmodels.JourneyInfoViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="?attr/colorOnPrimary"
                app:title="@{viewmodel.formattedName}"
                tools:title="Подробная информация" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Основной контент -->
                <LinearLayout
                    android:id="@+id/content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Основная карточка с информацией -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Описание -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="8dp"
                                android:text="@string/description"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/journey_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{viewmodel.journey.statement.data}"
                                tools:text="№ SR0278294, Предоставление VPN доступа партнерам, доступ партнерам находящимся за рубежем" />

                            <View
                                style="@style/HorizontalLineView"
                                android:layout_marginTop="12dp" />

                            <!--  Статус -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="8dp"
                                android:text="@string/status"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/task_priority"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{viewmodel.formattedStatus}"
                                tools:text="Новая" />

                            <View
                                style="@style/HorizontalLineView"
                                android:layout_marginTop="12dp" />

                            <!-- Контактный телефон -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="8dp"
                                android:text="Contact phone"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/task_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{viewmodel.journey.statement.contactPhone}"
                                tools:text="+79044567882" />

                            <View
                                style="@style/HorizontalLineView"
                                android:layout_marginTop="12dp" />

                            <!-- Детали -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="8dp"
                                android:text="@string/details"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold" />

                            <!-- Адрес -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Адрес:"
                                    android:textColor="@color/grey_for_text" />

                                <TextView
                                    android:id="@+id/journey_destination_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="@{viewmodel.journey.statement.destinationAddress}"
                                    android:textColor="@color/grey_for_text"
                                    tools:text="АЗС 'Лукойл' ул. Загородное шоссе 1/59" />
                            </LinearLayout>

                            <!-- Время прибытия -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Время ожидаемого прибытия:"
                                    android:textColor="@color/grey_for_text" />

                                <TextView
                                    android:id="@+id/journey_destination_time"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="@{viewmodel.formattedDestinationTime}"
                                    tools:text="20.08.2025 14:30" />
                            </LinearLayout>

                            <!-- Создано -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Создано:"
                                    android:textColor="@color/grey_for_text" />

                                <TextView
                                    android:id="@+id/journey_creation"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="@{viewmodel.formattedCreatedAt}"
                                    android:textColor="@color/grey_for_text"
                                    tools:text="20.08.2025 14:30" />
                            </LinearLayout>

                            <!-- Обновлено -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="4dp"
                                android:orientation="horizontal"
                                android:paddingBottom="22dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Обновлено:"
                                    android:textColor="@color/grey_for_text" />

                                <TextView
                                    android:id="@+id/journey_update"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="@{viewmodel.formattedUpdatedAt}"
                                    android:textColor="@color/grey_for_text"
                                    tools:text="20.08.2025 14:30" />
                            </LinearLayout>

                            <!-- Кнопки действий -->
                            <Button
                                android:id="@+id/confirm_journey_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Ознакомился"
                                android:visibility="gone"
                                tools:visibility="visible" />

                            <Button
                                android:id="@+id/start_journey_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Начать выезд"
                                android:visibility="gone"
                                tools:visibility="visible" />

                            <Button
                                android:id="@+id/finish_journey_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Закончить выезд"
                                android:visibility="gone"
                                tools:visibility="visible" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Состояние ошибки -->
                <LinearLayout
                    android:id="@+id/error_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:alpha="0.7"
                        android:src="@drawable/ic_error"
                        app:tint="@color/red"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/error_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="Ошибка при загрузке задачи"
                        android:textColor="@color/grey_for_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Попробуйте обновить данные"
                        android:textColor="@color/grey_for_text"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/update_error_state_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Повторить" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>